ALGORITHM sentence
VAR
    i:INTEGER
    words:INTEGER=0;
    vowels:INTEGER=0;
    c:= CHAR=' ';
    point:= CHAR='.'  ;  
    s:=STRING;
BEGIN
    FOR i FROM 0 TO s[i]=point STEP step  DO
        IF (s[i]='a'or 'e' or 'i' or 'o' or 'u' or 'y') THEN
            vowels:=vowels+1;
        END_IF
        IF (s[i]=c) THEN
            words:=words+1;
        END_IF
    END_FOR
    write(i);
    write(words);
    write(vowels);
END